{
  "name": "muzaia-legal-assistant",
  "version": 2,
  "builds": [
    {
      "src": "pages/**/*.js",
      "use": "@vercel/next"
    },
    {
      "src": "backend_complete.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend_complete.py"
    },
    {
      "src": "/(.*)",
      "dest": "/pages/$1"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "DATABASE_URL": "@database_url",
    "REPL_ID": "MuzaIA",
    "SESSION_SECRET": "@session_secret",
    "NODE_ENV": "production"
  },
  "functions": {
    "pages/**/*.js": {
      "runtime": "nodejs18.x"
    },
    "backend_complete.py": {
      "runtime": "python3.9"
    }
  }
}