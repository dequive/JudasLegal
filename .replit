modules = ["python-3.11", "postgresql-16", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"
packages = ["libxcrypt", "tesseract"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auth Server"

[[workflows.workflow]]
name = "Frontend App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start-frontend.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 deploy_server.py"
waitForPort = 80

[[workflows.workflow]]
name = "Auth Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node auth-server.js"
waitForPort = 3001

[[ports]]
localPort = 80
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
